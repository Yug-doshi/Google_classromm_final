<h1 align="center" class="myheading">Update Student</h1>
    <div class="container mt-4">
    
        <form action="/update_student_action" method="get" enctype="multipart/form-data">
           <input type="text" placeholder="Enter first name" class="form-control input border border-dark" required name="fname" value=<%= details.fname %>>
          <% if (typeof errorMessages !== 'undefined' && errorMessages.includes("Invalid First name")) { %>
            <h6 style="color: red;">Invalid First Name</h6>
          <% } %>
            <br>
            <br> <!-- Move the <br> tag here -->
            <input type = "text" placeholder = "Enter last name" class = "form-control input border border-dark" required name = "lname" value=<%= details.lname %>>
            <% if (typeof errorMessages !== 'undefined' && errorMessages.includes("Invalid Last name")) { %>
            <h6 style="color: red;">Invalid Last name</h6>
          <% } %>
            <br>
            <br>
            <input type = "number" placeholder = "Enter enrollment number" required class = "form-control border border-dark" name = "eno" value=<%= details.eno %> > 
            <% if (typeof errorMessages !== 'undefined' && errorMessages.includes("Enrollment Number Should be 12 Digit")) { %>
            <h6 style="color: red;">Enrollment Number Should be 12 Digit</h6>
            <% } %>
            <br> <br>

        <select class="form-select form-select-sm border border-dark" aria-label=".form-select-sm example" name = "sem">
        <option value="<%= details.sem %>" required id="data">Enter Semester</option>
        <option value="1" >1</option>
        <option value="2" >2</option>
        <option value="3" >3</option>
        <option value="4" >4</option>
        <option value="5" >5</option>
        <option value="6" >6</option>
        <option value="7" >7</option>
        <option value="8">8</option>
        </select>

        <br> <br>   

        <select class="form-select form-select-sm border border-dark" aria-label=".form-select-sm example" name = "branch">
        <option value="<%= details.branch %>" id="branch_value">Enter Branch</option>
        <option value="Computer" >Computer</option>
        <option value="IT" >IT</option>
        <option value="Electrical" >Electrical</option>
        <option value="Automobile" >Automobile</option>
        <option value="Civil" >Civil</option>
        <option value="Mechanical">Mechanical</option>
        <option value="CDDM" >CDDM</option>
        </select>

        <br> <br>

        <input type = "number" placeholder = "Enter your mobile number"  class = "form-control border border-dark" name = "mob" value=<%= details.mob %> required>
        <% if (typeof errorMessages !== 'undefined' && errorMessages.includes("Mobile Number Should be of 10 Digit")) { %>
            <h6 style="color: red;">Mobile Number Should be of 10 Digit</h6>
        <% } %>

        <br> <br>
        <label class = "form-label">Upload Student's photo</label>
        <input type = "file" class = "form-control border border-dark" name = "photo" id="image_id" required>
        <% if (typeof errorMessages !== 'undefined' && errorMessages.includes("Photo must be a PNG or JPEG or JPG")) { %>
            <h6 style="color: red;">Photo must be a PNG or JPEG or JPG</h6>
        <% } %>
          <br>
          <input type="hidden" name="_id" value=<%= details._id %>/>
        <input type = "submit" class = "btn btn-success" name = "submit">
    </form>

    <h1 align="center" class="myheading">Add Student</h1>
    <div class="container mt-4">
    
        <form action="/Update_Teacher_Action" method="get" enctype="multipart/form-data">
           <input type="text" placeholder="Enter Full name" class="form-control input border border-dark" required name="tname" value=<%= details.tname %>>
          <% if (typeof errorMessages !== 'undefined' && errorMessages.includes("Invalid First name")) { %>
            <h6 style="color: red;">Invalid Teacher Name</h6>
          <% } %>
            <br>
            <br> 
            <input type = "number" placeholder = "Enter Mobile Number" class = "form-control border border-dark" required name= "tmob" value=<%= details.tmob %>> 
            <% if (typeof errorMessages !== 'undefined' && errorMessages.includes("Mobile Number Should be of 10 Digit")) { %>
            <h6 style="color: red;">Mobile Number Should be 10 Digit</h6>
            <% } %>
            <br> <br>
        <input type = "number" placeholder = "Enter Salary"  class = "form-control border border-dark" name = "tsalary" required value=<%= details.tsalary %>>
        <br><br>
        <input type = "submit" class = "btn btn-success" name = "submit">
        <input type="hidden" value="<%= details._id %>" name="_id"/>
    </form>
